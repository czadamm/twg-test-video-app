{
  "expo": {
    "name": "TWG Video App",
    "slug": "twg-test-video-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/app-icon.png",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.twgtest.videoapp"
    },
    "android": {
      "package": "com.twgtest.videoapp"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/app-icon.png",
          "imageWidth": 128,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "react-native-video",
        {
          "enableNotificationControls": true,
          "androidExtensions": {
            "useExoplayerRtsp": false,
            "useExoplayerSmoothStreaming": false,
            "useExoplayerHls": false,
            "useExoplayerDash": false
          }
        }
      ]
    ]
  }
}
